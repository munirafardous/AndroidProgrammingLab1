<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.munirafardous.lab1.WeatherForecast"
    tools:showIn="@layout/activity_weather_forecast"
    android:background="#4ac18b">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="145dp"
        android:minWidth="200dp"
        android:minHeight="200dp" />

    <TextView
        android:id="@+id/currentTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/weatherImageView"
        android:text="32"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="50dp"/>

    <TextView
        android:id="@+id/minTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentTextView"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/weatherImageView"
        android:text="Min 12"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/maxTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/minTextView"
        android:layout_below="@+id/minTextView"
        android:layout_marginTop="20dp"
        android:text="Max 33"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normProgBar"
        android:layout_alignBottom="@+id/weatherImageView"
        android:layout_alignStart="@+id/maxTextView"
        android:visibility="invisible"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
